
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div align="center" class="container pt-4">
  <div class="form-group">
      <div class="col-sm-2 control-label">
          <%= form.label :username %>
        </div>
      <div  class="col-sm-6">
          <%= form.text_field :username,  class:"form-control", placeholder:"Votre pseudo"%>
      </div>
  </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :email %>
        </div>
        <div  class="col-sm-6">
         <%= form.text_field :email,  class:"form-control", placeholder:"Votre email"%>
        </div>
      </div>
        

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :password %>
        </div>
        <div  class="col-sm-6">
          <%= form.password_field :password,  class:"form-control", placeholder:"Votre mot de passe"%>
        </div>
      </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= form.submit %>
          </div>
        </div>
    <% end %>
</div>